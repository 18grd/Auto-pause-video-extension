{
    "manifest_version": 2,
    "name": "Auto Pause Video on Tab Switch",
    "version": "1.0",
    "description": "Pauses video when the tab is not active.",
    "permissions": [
      "tabs",
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
      }
    ]
  }
  